---
const { image, title, text } = Astro.props;
---

<div
  class="w-full max-w-sm mx-auto bg-white rounded-xl shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 overflow-hidden border border-neutral-100"
>
  {
    image && (
      <img
        class="w-full h-48 object-cover"
        src={image}
        alt={title || "Imagen del servicio"}
        loading="lazy"
      />
    )
  }

  <div class="p-5">
    {
      title && (
        <h3 class="text-lg font-semibold text-neutral-900 mb-3 leading-tight">
          {title}
        </h3>
      )
    }

    {
      text && (
        <p class="text-sm text-neutral-600 leading-relaxed mb-4">{text}</p>
      )
    }

    <div class="text-sm text-neutral-700 space-y-2">
      <slot />
    </div>
  </div>
</div>
